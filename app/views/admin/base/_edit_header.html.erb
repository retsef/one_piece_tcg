
<% content_for(:title) do %>
  <%= t("#{namespace}.actions.edit_resource", name: page.page_title) %>
<% end %>

<header class="md:flex md:items-center md:justify-between" role="banner">
  <div class="flex-1 min-w-0">
    <%= link_to t('helpers.back'), :back, class: 'text-sm font-medium text-gray-500 hover:text-gray-700', 'data-turbo-action': 'restore' %>
    
    <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate"><%= content_for(:title) %></h2>
  </div>

  <div class="mt-4 flex md:mt-0 md:ml-4">
    <%= render('edit_header_actions', page: page) %>
  </div>
</header>