<form class="search mt-3 sm:mt-0 px-4 md:px-0 mb-3 w-full" role="search">
  <label for="mobile-search-candidate" class="sr-only">Search</label>
  <label for="desktop-search-candidate" class="sr-only">Search</label>
  <div class="flex rounded-md shadow-sm">
    <div class="relative flex-grow focus-within:z-10">
      <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
        <%= inline_svg_tag 'heroicons/24/solid/magnifying-glass.svg', class: 'h-5 w-5 text-gray-400' %>
      </div>
      <%= text_field_tag 'mobile-search-candidate', search_term, placeholder: t("#{namespace}.search.label", resource: resource_name, default: "Search"),
                         class: "focus:ring-primary-500 focus:border-primary-500 block w-full rounded-md pl-10 sm:hidden border-gray-300" %>
      <%= text_field_tag 'desktop-search-candidate', search_term, placeholder: t("#{namespace}.search.label", resource: resource_name, default: "Search"),
                         class: "hidden focus:ring-primary-500 focus:border-primary-500 w-full rounded-md pl-10 sm:block sm:text-sm border-gray-300" %>
    </div>
  </div>
</form>