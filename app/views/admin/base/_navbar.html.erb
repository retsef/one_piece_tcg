<div class="sticky top-0 z-10 bg-gray-100 pl-1 sm:pl-3 sm:pt-3 md:hidden flex justify-between">
  <button type="button"
          data-action="navigation-sidebar#open:prevent:stop"
          class="-ml-0.5 -mt-0.5 inline-flex h-12 w-12 items-center justify-center rounded-md text-gray-500 hover:text-gray-900 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-primary-500">
    <span class="sr-only">Open sidebar</span>
    <%= inline_svg_tag 'heroicons/24/outline/bars-3.svg', class: 'h-6 w-6' %>
  </button>

  <!-- Brand Logo -->
  <div class="flex-1 inline-flex ml-1 pt-2">
    <%= inline_svg_tag 'brand_logo.svg', class: 'h-8 w-auto text-primary-500', alt: application_title %>
    <h1 class="flex-1 text-primary-500 px-1 h-8 text-xl font-medium font-mono subpixel-antialiased"><%= application_title %></h1>
  </div>

  <button type="button"
          data-action="command-palette#open:prevent:stop"
          class="mr-1.5 -mt-0.5 inline-flex absolute right-0 h-12 w-12 items-center justify-center rounded-md text-gray-500 hover:text-gray-900 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-primary-500">
    <span class="sr-only">Open Search</span>
    <%= inline_svg_tag 'heroicons/24/outline/magnifying-glass.svg', class: 'h-6 w-6' %>
  </button>
</div>
