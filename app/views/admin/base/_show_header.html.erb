<% content_for(:title) do
  t("#{namespace}.actions.show_resource", name: page.page_title)
end %>

<header class="lg:flex lg:items-center lg:justify-between" role="banner">
  <div class="flex-1 min-w-0">
    <%= link_to t("helpers.back"), :back, class: 'text-sm font-medium text-gray-500 hover:text-gray-700', 'data-turbo-action': 'restore' %>
    
    <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
      <%= content_for(:title) %>
    </h2>
  </div>

  <div class="mt-5 flex lg:mt-0 lg:ml-4">
    <%= render('show_header_actions', page: page) %>
  </div>
</header>