<%= active_link_to url,
                   active: active_matcher,
                   class_active: 'text-gray-900 border-primary-500',
                   class_inactive: 'text-gray-500 hover:border-gray-300 hover:text-gray-700',
                   class: 'group inline-flex items-center border-b-2 px-1 pt-1 text-sm font-medium',
                   target: ('_blank' if external?),
                   data: data_attributes,
                   'data-action': 'click->navigation-sidebar#close' do %>

  <% if icon? %>
    <%= inline_svg_tag icon,
                       class: "#{
                         active_link_to_class url,
                                              active: active_matcher,
                                              class_active: 'text-gray-600',
                                              class_inactive: 'text-gray-600 group-hover:text-gray-900'
                       } mr-2 flex-shrink-0 h-5 w-5" %>
  <% end %>

  <%= label %>

  <% if beta? %>
    <span class="ml-1 inline-flex items-center rounded-full bg-orange-100 px-2.5 py-0.5 text-xs font-medium text-orange-800">beta</span>
  <% end %>

  <% if coming_soon? %>
    <span class="ml-1 inline-flex items-center rounded-full bg-blue-100 px-2.5 py-0.5 text-xs font-medium text-blue-800">prossimante</span>
  <% end %>

  <% if external? %>
    <%# inline_svg_tag '@tabler/icons/icons/outline/external-link.svg', class: 'text-gray-500 h-5 w-5 ml-1 inline-flex items-end' %>
  <% end %>
<% end %>
