<div id="<%= modal_id %>" class="relative z-10" aria-labelledby="modal-title" role="dialog" aria-modal="true"
     data-controller="modal"
     data-modal-hide-class="hidden"
     data-action="modal:show->modal#show modal:close->modal#close">
  <div
    id="<%= modal_id %>-backdrop"
    data-modal-target="backdrop"
    data-action="click->modal#close"
    data-controller="transition"
    data-transition-initial-value
    data-transition-enter-active="transition ease-out duration-300"
    data-transition-enter-from="transform opacity-0"
    data-transition-enter-to="transform opacity-100"
    data-transition-leave-active="transition ease-in duration-200"
    data-transition-leave-from="transform opacity-100"
    data-transition-leave-to="transform opacity-0"
    aria-hidden="true"
    class="modal-backdrop fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"></div>

  <div class="fixed z-10 inset-0 overflow-y-auto">
    <div class="flex items-center justify-center min-h-full p-4 text-center sm:p-0">

      <div id="<%= modal_id %>-dialog"
           data-modal-target="dialog"
           data-action="transition:end-leave->modal#remove"
           data-controller="transition"
           data-transition-initial-value
           data-transition-enter-active="transition ease-out duration-300"
           data-transition-enter-from="transform opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
           data-transition-enter-to="transform opacity-100 translate-y-0 sm:scale-100"
           data-transition-leave-active="transition ease-in duration-200"
           data-transition-leave-from="transform opacity-100 translate-y-0 sm:scale-100"
           data-transition-leave-to="transform opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
           class="modal relative bg-white rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:max-w-lg sm:w-full sm:p-6">

        <form method="dialog">
          <div class="sm:block absolute top-0 right-0 pt-4 pr-4">
            <button type="button"
                    data-action="modal#close"
                    class="bg-white rounded-md text-gray-400 hover:text-gray-500
                           focus:outline-none focus:ring-2 focus:ring-offset-2 <%= style(:close, color:) %>">
              <span class="sr-only">Close</span>
              <%= inline_svg_tag 'heroicons/24/outline/x-mark.svg', class: 'h-6 w-6' %>
            </button>
          </div>

          <!-- Modal body -->
          <div class="sm:flex sm:items-start">
            <div class="<%= style(:icon, background: color) %> mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full sm:mx-0 sm:h-10 sm:w-10">
              <%= inline_svg_tag icon, class: "h-6 w-6 #{style(:icon, color:)}" %>
            </div>
            <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
              <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title"><%= title %></h3>
              <p class="mt-2 text-sm text-gray-500" id="modal-body"><%= body %></p>
            </div>
          </div>

          <div class="mt-5 sm:mt-4 sm:flex sm:flex-row-reverse">
            <button type="button" id="confirm"
                    data-action="modal#confirm"
                    data-behavior="commit"
                    value="confirm"
                    class="<%= style(:commit, color:) %> w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 text-base font-medium text-white focus:outline-none focus:ring-2 focus:ring-offset-2 sm:ml-3 sm:w-auto sm:text-sm">
              <%= commit %>
            </button>

            <button type="button" id="cancel"
                    data-action="modal#cancel"
                    data-behavior="cancel"
                    value="cancel"
                    class="<%= style(:cancel, color:) %> mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-2 sm:mt-0 sm:w-auto sm:text-sm">
              <%= cancel %>
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>