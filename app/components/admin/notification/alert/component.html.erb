<div class="relative z-10" role="dialog" aria-modal="true"
     data-controller="modal-form"
     data-modal-form-hide-class="hidden"
     data-action="keydown.esc->modal-form#close">

  <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"
       data-controller="transition"
       data-modal-form-target="backdrop"
       data-action="transition:end-leave->modal-form#remove click->modal-form#close:stop:prevent"
       data-transition-initial-value
       data-transition-enter-active="transition-opacity ease-out duration-300"
       data-transition-enter-from="opacity-0"
       data-transition-enter-to="opacity-100"
       data-transition-leave-active="transition-opacity ease-in duration-200"
       data-transition-leave-from="opacity-100"
       data-transition-leave-to="opacity-0"></div>

  <div class="fixed inset-0 z-10 overflow-y-auto">
    <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
      <div class="relative transform overflow-hidden rounded-lg bg-white px-4 pb-4 pt-5 text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-sm sm:p-6"
           data-controller="transition audio-effect"
           data-audio-effect-src-value="<%= audio %>"
           data-action="transition:end-enter->audio-effect#play"
           data-modal-form-target="dialog"
           data-transition-initial-value
           data-transition-enter-active="ease-out duration-300"
           data-transition-enter-from="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
           data-transition-enter-to="opacity-100 translate-y-0 sm:scale-100"
           data-transition-leave-active="ease-in duration-200"
           data-transition-leave-from="opacity-100 translate-y-0 sm:scale-100"
           data-transition-leave-to="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95">

        <div>
          <div class="mx-auto flex h-12 w-12 items-center justify-center rounded-full <%= style(:icon, color: type, background: type) %>">
            <%= inline_svg_tag icon, class: "h-6 w-6" %>
          </div>
          <div class="mt-3 text-center sm:mt-5">
            <h3 class="text-base font-semibold leading-6 text-gray-900">
              <%= title %>
            </h3>
            <div class="mt-2">
              <p class="text-sm text-gray-500">
                <%= description %>
              </p>
            </div>
          </div>
        </div>

        <div class="mt-5 sm:mt-6">
          <button type="button" class="inline-flex w-full justify-center rounded-md bg-primary-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-primary-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary-600"
                  data-modal-form-target="close" data-action="click->modal-form#close">
            <%= confirm %>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
